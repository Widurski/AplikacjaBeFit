<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BeFit 16-BIT SYSTEM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar mb-3">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">[ BeFit v1.0 ]</a>
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" asp-controller="TypyCwiczen" asp-action="Index">BAZA ĆWICZEŃ</a></li>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="SesjeTreningowe" asp-action="Index">DZIENNIK SESJI</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Statystyki" asp-action="Index">STATYSTYKI</a></li>
                }
                <partial name="_LoginPartial" />
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2025 BeFit System - PRESS START TO BEGIN
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>