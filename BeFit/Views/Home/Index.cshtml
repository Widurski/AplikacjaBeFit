        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <a class="btn btn-success btn-lg mt-3" asp-controller="SesjeTreningowe" asp-action="Index">ROZPOCZNIJ TRENING [ENTER]</a>
        }
        else
        {
            <div class="mt-4">
                <p>> ZALOGUJ SIĘ ABY UZYSKAĆ DOSTĘP:</p>
                <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">LOGOWANIE</a>
                <a class="btn btn-secondary btn-lg" asp-area="Identity" asp-page="/Account/Register">REJESTRACJA</a>
            </div>
        }
    </div>
</div>