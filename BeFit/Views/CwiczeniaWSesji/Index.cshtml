@model IEnumerable<BeFit.Models.CwiczenieWSesji>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SesjaTreningowa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypCwiczenia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LiczbaPowtorzen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Obciazenie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(item.SesjaTreningowa?.Id.ToString() ?? string.Empty)
            </td>
            <td>
                @(item.TypCwiczenia?.Nazwa ?? string.Empty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiczbaPowtorzen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Obciazenie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
